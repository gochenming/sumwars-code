ELSE (WIN32) #Unix/OSX
	CMAKE_MINIMUM_REQUIRED(VERSION 2.4.7 FATAL_ERROR)
	FIND_PACKAGE(PkgConfig)
	IF(PKG_CONFIG_FOUND)
		PKG_SEARCH_MODULE(CEGUIOGRE CEGUI-OGRE)
		SET(CEGUIOGRE_INCLUDE_DIRS ${CEGUIOGRE_INCLUDE_DIRS})
		SET(CEGUIOGRE_LIBRARY_DIRS ${CEGUIOGRE_LIBDIR})
		SET(CEGUIOGRE_LIBRARIES ${CEGUIOGRE_LIBRARIES} CACHE STRING "")
	ENDIF(PKG_CONFIG_FOUND)
	IF(NOT CEGUIOGRE_FOUND) #If PkgConfig couldn't find OGRE...
		IF (NOT CEGUIOGRE_FIND_QUIETLY)
			MESSAGE(STATUS " Manually searching for CEGUIOGRE")
		ENDIF (NOT CEGUIOGRE_FIND_QUIETLY)
		FIND_PATH(CEGUIOGRE_INCLUDE_DIRS Ogre.h ${CEGUIOGRE_INCLUDE_SEARCH_DIRS})
		FIND_LIBRARY(CEGUIOGRE_LIBRARIES OgreMain PATHS ${CEGUIOGRE_LIBRARY_SEARCH_DIRS})
	ENDIF(NOT CEGUIOGRE_FOUND)
