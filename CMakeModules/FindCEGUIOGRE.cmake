MARK_AS_ADVANCED(CEGUIOGRE_INCLUDE_DIRS CEGUIOGRE_LIBRARIES CEGUIOGRE_LIBRARY_DIRS)

IF (CEGUIOGRE_INCLUDE_DIRS AND CEGUIOGRE_LIBRARIES)
	SET(CEGUIOGRE_FOUND TRUE)
ENDIF (CEGUIOGRE_INCLUDE_DIRS AND CEGUIOGRE_LIBRARIES)

IF (CEGUIOGRE_FOUND)
	IF (NOT CEGUIOGRE_FIND_QUIETLY)
		MESSAGE(STATUS "  libraries : ${CEGUIOGRE_LIBRARIES} from ${CEGUIOGRE_LIBRARY_DIRS}")
		MESSAGE(STATUS "  includes  : ${CEGUIOGRE_INCLUDE_DIRS}")
	ENDIF (NOT CEGUIOGRE_FIND_QUIETLY)
ELSE (CEGUIOGRE_FOUND)
	IF (CEGUIOGRE_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "Could not find CEGUIOGRE. Make sure you have the CEGIOOGRE development headers installed. They should be part of OGRE. Otherwise, try setting LIBRARY_SEARCH_DIRS and INCLUDE_SEARCH_DIRS to the place CEGUIOGRE was installed with -DLIBRARY_SEARCH_DIRS=<path/to/lib> -DINCLUDE_SEARCH_DIRS=<path/to/include>")
	ENDIF (CEGUIOGRE_FIND_REQUIRED)
ENDIF (CEGUIOGRE_FOUND)
