<RenderInfo name="spiderbase" parent="creaturebase">
	<Soundobject objectname="sound" />
	<Action name="walk">
		<Animation name="walk" />
	</Action>
	
	<Action name="attack">
		<Animation name="attack1" />
	</Action>
	<Action name="attack">
		<Animation name="attack2" />
	</Action>
	
	<Action name="stun_attack">
		<Animation name="attack1" />
	</Action>
	<Action name="stun_attack">
		<Animation name="attack2" />
	</Action>

	<Action name="poison_attack">
		<Animation name="attack1" />
	</Action>
	<Action name="poison_attack">
		<Animation name="attack2" />
	</Action>

	<Action name="die">
		<Animation name="die" />
		<Sound objectname="sound" name="worm_die"/>
	</Action>
	
	<Action name="noaction">
		<Animation name="idle1" />
	</Action>
	<Action name="noaction">
		<Animation name="idle2" />
	</Action>
</RenderInfo>

<RenderInfo name="caveSpider" parent="spiderbase">
	<Entity source="spider.mesh"/>
</RenderInfo>

<RenderInfo name="caveSpiderSmall" parent="spiderbase">
	<Entity source="spider.mesh" scale="0.5"/>
</RenderInfo>