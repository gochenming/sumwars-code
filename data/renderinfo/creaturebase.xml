		<Stable>
			<Movement objectname="berserk" start="0.0" end="0.3" start_vec="0.0 0.0 0.0" end_vec="0.0 0.1 0.0" />
			<Movement objectname="berserk" start="0.3" end="0.5" start_vec="0.0 0.1 0.0" end_vec="0.0 0.0 0.0" />
