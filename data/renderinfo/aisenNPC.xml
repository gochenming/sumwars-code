<RenderInfo name = "guardPoleBase" parent="playerbase">
	<Action name="noaction">
		<Animation name="idlePole" />
	</Action>
	
	<Action name="die">
		<Animation name="die" />
	</Action>
	
	<Action name="walk">
		<Animation name="walkPole" />
	</Action>
	
	<Action name = "talk">
		<Animation name = "talkPole" />
	</Action>
	
	<Action name = "sad">
		<Animation name = "sadPole" />
	</Action>

	<Action name="holdItem">
		<Animation name="showItemPole"/>
	</Action>
	
	<Action name="magic_attack">
		<Animation name="attackMagicTwoHands" />
		<ParticleSystem objectname="magicEnergy" bone="mainmesh:itemRightHand" source="Magic_Arrow" position="0.0 0.0 -1.4" />
		<Detach time="0.4" objectname="magicEnergy" />
	</Action>
	
</RenderInfo>

