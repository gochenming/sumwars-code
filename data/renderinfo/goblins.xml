<RenderInfo name="goblin_rob">
	<Entity source="goblin.mesh"/>
	<Entity objectname="hammer" bone="itemRightHand" source="goblin_hmr.mesh" />
	
	<Action name="walk">
		<Animation name="walk" />
	</Action>
	
	<Action name="attack">
		<Animation name="attack" />
	</Action>
	<Action name="attack">
		<Animation name="attack2" />
	</Action>
	
	<Action name="die">
		<Animation name="die" />
	</Action>
	
	<Action name="doubleattack">
		<Animation name="attack" start="0.0" end="0.5"/>
		<Animation name="attack2" start="0.5" end="1.0"/>
	</Action>
	
	<Action name="walkattack">
		<Animation name="walk" start="0.0" end="0.7"/>
		<Animation name="attack" start="0.4" end="1.0"/>
	</Action>
	
	<Action name="growattack">
		<Scale  start="0.0" end="0.5" start_val="1.0" end_val="2.0" />
		<Animation name="attack" />
		<Scale  start="0.5" end="1.0" start_val="2.0" end_val="1.0" />
	</Action>
	
	<Action name="looseclub">
		<Detach time="0.4" objectname="hammer" />
		<Animation name="walk" />
		<Entity time="0.9" objectname="hammer" bone="itemRightHand" source="goblin_hmr.mesh" />
	</Action>
	
	<Action name="bigclubattack">
		<Scale  objectname="hammer" start="0.0" end="0.5" start_val="1.0" end_val="2.0" />
		<Animation name="attack" />
		<Scale objectname="hammer" start="0.5" end="1.0" start_val="2.0" end_val="1.0" />
	</Action>
	
	<Action name="shift">
		<Movement start="0.0" end="0.5" start_vec="0.0 0.0 0.0" end_vec="50.0 0.0 0.0" />
		<Movement start="0.5" end="1.0" start_vec="50.0 0.0 0.0" end_vec="0.0 0.0 0.0" />
	</Action>
	
	<Action name="shifthammer">
		<Movement objectname="hammer" start="0.0" end="0.5" start_vec="0.0 0.0 0.0" end_vec="50.0 0.0 0.0" />
		<Animation name="attack" />
		<Movement objectname="hammer" start="0.5" end="1.0" start_vec="50.0 0.0 0.0" end_vec="0.0 0.0 0.0" />
	</Action>
	
	<Action name="rotate">
		<Rotation start="0.0" end="1.0" start_vec="0.0 0.0 0.0" end_vec="0.0 360.0 0.0" />
		<Rotation objectname="hammer" start="0.0" end="1.0" start_vec="0.0 0.0 0.0" end_vec="0.0 360.0 0.0" />
	</Action>
	
	<Action name="rotatehammer">
		<Rotation objectname="hammer" start="0.0" end="1.0" start_vec="0.0 0.0 0.0" end_vec="0.0 360.0 0.0" />
	</Action>
	
	<Action name="firewave">
		<!--<Entity time="0.0" objectname="firewave" position="0.0 50.0 0.0" source=".mesh" /> -->
	</Action>
	
	<State name="poisoned" >
		<Activation>
			<Entity objectname="poison" position="0.0 100.0 0.0" source="goblin_hmr.mesh"/>
		</Activation>
		
		<Active time="2000">
			<Rotation objectname="poison" start_vec="0.0 0.0 0.0" end_vec="0.0 360.0 0.0" />
		</Active>
		
		<Deactivation>
			<Detach objectname="poison" />
		</Deactivation>
	</State>
	
	<State name="burning" >
		<Activation time="1000" >
			<!-- <ParticleSystem objectname="fire" position="0.0 50.0 0.0" source="Fireball"/> -->
			<Entity objectname="fire" position="0.0 50.0 0.0" source="goblin_hmr.mesh"/> 
			<Scale objectname="fire" start_val="0.1" end_val="1.0" />
		</Activation>
		
		<Deactivation time="1000">
			<Scale objectname="fire" start_val="1.0" end_val="0.1" />
			<Detach time="1.0" objectname="fire" />
		</Deactivation>
	</State>
</RenderInfo>

