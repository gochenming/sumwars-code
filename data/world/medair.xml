<World >
<!-- Lobby Konzilshalle der Elemtarmagier [fester Ort; Saeulenhalle im roemischen Stil] -->
<!-- Orte: Soren Windclaw -->
	<Region id="2" name="elCnlLobby">
		<AmbientLight red="0.4" green="0.4" blue="0.4" />
		<HeroLight red="1.0" green="1.0" blue="1.0" /> 
		<DirectionalLight red="0.3" green="0.3" blue="0.3" />
		
		<Settings dimx="60" dimy="65" region_template="councilhall" ground="council_ground"/>
		<WorldPosition world_x="0.6" world_y ="0.94" />
		
		<ExitDirections north="true" south="false" west="false" east="false" />
		<Exits>
			<Exit name="exit_north" destination_region="medBackalley" destination_location="entry_south" >
				<Shape shape="RECT" extent_x="4.0" extent_y ="4.0" />
			</Exit>
		</Exits>
			
		<Environments>
			<Environment height="1.0" name="council" />
		</Environments>
		
<!--		<SpawnGroups>
			<SpawnGroup group_name="elemental" number="1" />
		</SpawnGroups>-->
	</Region>

<!-- Medair, Hintergassen zwischen Konzil und Soeldnerlager-->
	<Region id="17" name="medBackalley">
		<AmbientLight red="0.4" green="0.4" blue="0.4" />
		<HeroLight red="1.0" green="1.0" blue="1.0" /> 
		<DirectionalLight red="0.3" green="0.3" blue="0.3" />
		
		<Settings dimx="17" dimy="17" region_template="medBackalley"  ground="grass1"/>
		<WorldPosition world_x="0.5" world_y ="0.94" />
		<ExitDirections north="true" south="true" west="false" east="false" />
		
		<Exits>
			<Exit name="exit_north" destination_region="medMercCamp" destination_location="entry_south" >
				<Shape shape="RECT" extent_x="4.0" extent_y="4.0" />
			</Exit>
			<Exit name="exit_south" destination_region="elCnlLobby" destination_location="entry_north" >
				<Shape shape="RECT" extent_x="4.0" extent_y="4.0" />
			</Exit>
		</Exits>
		
		
		
		<Environments>
			<Environment height="1.0" name="meadow" />
		</Environments>
	</Region>	
	
<!-- Medair, Soeldnerlager [Stadt]-->
<!-- Orte: Fenor Marken -->
	<Region id="3" name="medMercCamp">
		<AmbientLight red="0.4" green="0.4" blue="0.4" />
		<HeroLight red="1.0" green="1.0" blue="1.0" /> 
		<DirectionalLight red="0.3" green="0.3" blue="0.3" />
		
		<Settings dimx="20" dimy="20" region_template="medairMercenaryCamp"  ground="grass1"/>
		
		<WorldPosition world_x="0.5" world_y ="0.9" waypoint="true"/>
		
		<ExitDirections north="true" south="true" west="false" east="false" />
		
		<Exits>
			<Exit name="exit_south" destination_region="medBackalley" destination_location="entry_north" >
				<Shape shape="RECT" extent_x="4.0" extent_y="4.0" />
			</Exit>

			<Exit name="exit_north" destination_region="aisMeadow" destination_location="entry_south" >
				<Shape shape="RECT" extent_x="4.0" extent_y="4.0" />
			</Exit>
		</Exits>
		
		<Environments>
			<Environment height="1.0" name="hills" />
		</Environments>		
		
		<ReviveLocation  location="WaypointLoc" />
		
		<Event trigger ="create_region" once = "true">
			<Effect>
				fenor = createObject('guard', 'locFenor');
				addArea('FenorArea','circle','locFenor',5);
				setRefName(fenor, 'Fenor Marken');
				
				trader = createObject('peasant', 'locWeaponTrader');
				setRefName(trader, 'Robert');
				
				trader = createObject('peasant', 'locArmorTrader');
				setRefName(trader, 'Elgor');

				trader = createObject('peasant', 'locPotionTrader');
				setRefName(trader, 'Cain');

				guard1 = createObject('guard', 'locSoldier1');
				setRefName(guard1, 'Guard');
				guard2 = createObject('guard', 'locSoldier2');
				setRefName(guard2, 'Guard');
				guard3 = createObject('guard', 'locSoldier3');
				setRefName(guard3, 'Guard');
			</Effect>
		</Event>
	</Region>
</World>