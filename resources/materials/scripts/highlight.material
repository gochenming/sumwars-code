		{
			scene_blend alpha_blend
			depth_check on
			lighting off
			
			fragment_program_ref red_highlight_ps 
			{
				param_named alpha_value float 0.0
			}
		}

		pass
		{
			scene_blend alpha_blend
			depth_check on
			lighting off
			
			fragment_program_ref red_highlight_ps 
			{
				param_named alpha_value float 0.0
			}
			
		}
		
	}
}

