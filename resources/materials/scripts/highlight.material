fragment_program red_highlight_ps glsl
{
	source p_red_highlight.glsl

}

fragment_program white_highlight_ps glsl
{
	source p_white_highlight.glsl

}

vertex_program highlight_vs glsl
{
	source v_highlight.glsl
}

material red_highlight
{
	technique
	{
		pass
		{
			scene_blend alpha_blend
			depth_check on
			lighting off
			
			fragment_program_ref red_highlight_ps 
			{
				param_named alpha_value float 0.4
			}
		}
		
	}
}


